    <header
        android:id="@+id/donate"
        android:summary="@string/summary_donate"
        android:title="@string/donate" >
        <intent
            android:action="android.intent.action.VIEW"
            android:data="market://details?id=jp.tkgktyk.donatetotkgktyk" />
    </header>
    <header
        android:summary="@string/summary_special_thanks"
        android:title="@string/special_thanks" >
        <intent
            android:action="android.intent.action.VIEW"
            android:data="https://sites.google.com/site/tkgktyk/android/flying-android" />
