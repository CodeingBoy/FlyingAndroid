<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mylib="http://schemas.android.com/apk/res-auto" >

    <Preference
        android:summary="@string/summary_note"
        android:title="@string/Note" />

    <PreferenceCategory android:title="@string/Settings" >
        <ListPreference
            android:defaultValue="1.5"
            android:entries="@array/speeds"
            android:entryValues="@array/speedValues"
            android:key="@string/pref_key_speed"
            android:title="@string/Speed" />
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/takeoffPositions"
            android:entryValues="@array/takeoffPositionValues"
            android:key="@string/pref_key_takeoff_position"
            android:title="@string/Takeoff_position" />
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pinPositions"
            android:entryValues="@array/pinPositionValues"
            android:key="@string/pref_key_pin_position"
            android:title="@string/Pin_position" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_key_auto_pin"
            android:summary="@string/summary_auto_pin"
            android:title="@string/Auto_pin" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/pref_key_notify_flying"
            android:summary="@string/summary_notify_flying"
            android:title="@string/Notify_flying" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/pref_key_force_set_window_background"
            android:summary="@string/summary_force_set_window_background"
            android:title="@string/Force_set_window_background" />

        <Preference
            android:key="@string/pref_key_black_list"
            android:title="@string/Black_list" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/Informations" >
        <Preference
            android:summary="@string/summary_developer"
            android:title="@string/Developer" >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://sites.google.com/site/tkgktyk/android/flying-android" />
        </Preference>
        <Preference
            android:summary="@string/summary_donate"
            android:title="@string/Donate" >
            <intent
                android:action="android.intent.action.VIEW"
                android:data="market://details?id=jp.tkgktyk.donatetotkgktyk" />
        </Preference>
        <Preference
            android:summary="@string/summary_acknowledgement"
            android:title="@string/Acknowledgement"
            />
    </PreferenceCategory>

</PreferenceScreen>